<% layout("layout/boilerplate") %>

    <div
      class="bg-primary-600 flex flex-col self-center p-4 relative z-5 text-background-100 w-[85%] md:max-w-96"
    >
    
      <div class="bg-accent-400 px-3  bg-gradient pt-2 pb-4 ">
        <div
          class="p-2 flex flex-col justify-center"
        >
          <h2
            class="w-[100%] py-4 font-bold text-3xl   rounded-md px-2 mb-2"
          >
            <%= product.name %>
          </h2>
          <div class="flex flex-row justify-center items-center flex-wrap space-x-6 pt-2">
            <h6
            class="underline underline-offset-4 font-semibold  px-1 sm:text-xl rounded-sm hover:text-textMain-100"
          >
            <a
              href="/products?category=<%= product.category %>"
              class="main-text show-category "
            >
              <%= product.category.toUpperCase() %></a
            >
          </h6>
          <h6
          class=" <%= product.buy === "on" ? " text-primary-600" : ""%> text-xl px-1 font-semibold rounded-sm w-12 text-center"
        >
          <%= product.buy === "on" ? "Buy" : "Omit"%>
        </h6>
          <h6
            class="text-xl"
          >
            $<%= product.price === "0-0" ? "---" : product.price  %>
          </h6>
        
    
          
        </div>
        <h6 class="text-end text-2xl  py-4">
         Quantity: <%= product.qty %>
        </h6>
      </div>
      <div class="flex justify-end items-center font-semibold gap-4">
        <a
          href="/products/new/<%= product.id %>/edit"
          class=" btn-edit"
          >Edit</a
        >

        <button class="btn-delete delete-button" data-id="deleteModal">
          Delete?
        </button>

      </div>
      </div>
      <div class="flex items-center justify-end pr-3">

        <a href="/products" class="mt-2  p-2 w-fit bg-secondary-600 rounded-md hover:bg-secondary-800"
          >All Products <i class="fa-solid fa-left-long"></i
        ></a>
      </div>
    </div>
 

    
<%- include('../partials/deleteModal.ejs') %>