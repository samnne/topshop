<% layout("layout/boilerplate.ejs") %>


  <h1 class="display-1 text-center main-text " style="text-shadow: 4px 2px 10px rgba(255, 255, 255, 0.596);">
    <%= category.toUpperCase() %> Products!
  </h1>

  <main class="container">
    <ul class="list-group row" id="list-group">
      <% for(let product of products){ %>
        <li class="list-group-item list-group-item-action d-flex flex-wrap p-0">
          <div class="col-12 p-2 ps-4">
            <a class="name-link" href="/products/<%= product.id %>">
              <b>
                <%= product.name %>:
              </b>
            </a>
            <span>~$<%= round(product.price * product.qty, 2) %>, <%= product.category.toUpperCase() %> </span>
            <span class="<%= product.buy === " on" ? "fw-bold" : "fw-normal" %> ">
              <%= product.qty %> : <%= product.buy==="on" ? "Buy" : "Dont Buy" %>
            </span>
          </div>
          <div class=" col-12 d-flex  align-content-center  pe-3 py-2">
            <div class="input-group  justify-content-end">
              <a href="/products/new/<%= product.id %>/edit" class=" btn btn-info fs-6  input-group-text">Edit</a>
              <form action="/products/<%= product._id %>?_method=DELETE"
                class=" p-0  btn btn-danger  fs-6 input-group-text" method="post">
                <button class="btn btn-danger  ">
                  Delete
                </button>
              </form>
            </div>

          </div>
        </li>
        <% } %>
    </ul>

  </main>

    <div class="row  mt-auto">
      <div class="col-12">
        <h3 class="display-6 main-text">Average Total Cost: $<%= sum %>
        </h3>
      </div>
    </div>

